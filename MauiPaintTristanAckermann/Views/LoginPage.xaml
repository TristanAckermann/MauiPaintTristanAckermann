
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MauiPaintTristanAckermann.ViewModels"
             x:Class="MauiPaintTristanAckermann.Views.LoginPage"
             BackgroundColor="{StaticResource AppBackground}"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="*, Auto, *" Padding="30">
        
        <!-- Center Content -->
        <VerticalStackLayout Grid.Row="1" Spacing="25" VerticalOptions="Center">
            
            <!-- Branding / Logo Area -->
            <Image Source="brush.png" WidthRequest="80" HeightRequest="80" HorizontalOptions="Center" Aspect="AspectFit">
                <Image.Behaviors>
                    <Toolkit:IconTintColorBehavior Color="{StaticResource Accent}" xmlns:Toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"/>
                </Image.Behaviors>
            </Image>
            
            <Label Text="MauiPaint" FontSize="32" FontAttributes="Bold" TextColor="{StaticResource White}" HorizontalOptions="Center" />
            <Label Text="Wie möchtest du genannt werden?" FontSize="16" TextColor="{StaticResource TextGray}" HorizontalOptions="Center" />

            <!-- Input Card -->
            <Border StrokeShape="RoundRectangle 15" BackgroundColor="{StaticResource PanelBackground}" StrokeThickness="0" Padding="15">
                <Entry Text="{Binding UserName}" 
                       Placeholder="Dein Name" 
                       TextColor="{StaticResource White}" 
                       PlaceholderColor="{StaticResource TextGray}" 
                       HorizontalTextAlignment="Center"
                       Keyboard="Plain" />
            </Border>

            <!-- Validation Error -->
            <Label Text="{Binding UserNameError}" 
                   TextColor="{StaticResource ValidationRed}" 
                   FontSize="12" 
                   HorizontalOptions="Center"
                   IsVisible="{Binding UserNameError, Converter={StaticResource StringToBoolConverter}}" />

            <!-- Login Button -->
            <Button Text="Loslegen" 
                    Command="{Binding LoginCommand}"
                    BackgroundColor="{StaticResource PrimaryAction}" 
                    CornerRadius="25"
                    FontAttributes="Bold"
                    HeightRequest="50"
                    Margin="0,10,0,0" />
            
        </VerticalStackLayout>

        <!-- Footer -->
        <Label Grid.Row="2" Text="Kein Account nötig. Nur ein Name." TextColor="{StaticResource TextGray}" FontSize="12" VerticalOptions="End" HorizontalOptions="Center" Opacity="0.5" />
        
    </Grid>
</ContentPage>