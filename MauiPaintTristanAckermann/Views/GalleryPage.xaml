<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MauiPaintTristanAckermann.ViewModels"
             x:DataType="vm:GalleryViewModel"
             x:Class="MauiPaintTristanAckermann.Views.GalleryPage"
             Title="Galerie">
    
    <CollectionView ItemsSource="{Binding Drawings}">
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="x:String">
                <Label Text="{Binding .}" Padding="10" />
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>