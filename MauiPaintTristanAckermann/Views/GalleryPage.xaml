<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MauiPaintTristanAckermann.ViewModels"
             xmlns:models="clr-namespace:MauiPaintTristanAckermann.Models"
             x:Class="MauiPaintTristanAckermann.Views.GalleryPage"
             x:DataType="vm:GalleryViewModel"
             Title="Galerie"
             BackgroundColor="{StaticResource AppBackground}">

    <Grid RowDefinitions="Auto, *, Auto" Padding="20">
        
        <Label Grid.Row="0" 
               Text="{Binding CurrentUserText}" 
               FontSize="14" 
               TextColor="{StaticResource TextGray}" 
               HorizontalOptions="End" 
               Margin="0,0,0,10" />

        <CollectionView Grid.Row="1" 
                        ItemsSource="{Binding GalleryImages}" 
                        SelectionMode="Single"
                        SelectedItem="{Binding SelectedImage}">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="2" HorizontalItemSpacing="10" VerticalItemSpacing="10" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:GalleryItem">
                    <Border Padding="5" StrokeShape="RoundRectangle 15" HeightRequest="200" 
                           BackgroundColor="{StaticResource PanelBackground}" Stroke="{StaticResource TextGray}">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup Name="CommonStates">
                                <VisualState Name="Normal" />
                                <VisualState Name="Selected">
                                    <VisualState.Setters>
                                        <Setter Property="Stroke" Value="{StaticResource Accent}" />
                                        <Setter Property="BackgroundColor" Value="{StaticResource PrimaryAction}" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        
                        <Image Source="{Binding Image}" Aspect="AspectFit" VerticalOptions="Center" HorizontalOptions="Center" />
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            <CollectionView.EmptyView>
                <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="10">
                    <Label Text="Noch keine Kunstwerke gespeichert." 
                           TextColor="{StaticResource TextGray}"
                           HorizontalOptions="Center" 
                           FontSize="18" FontAttributes="Bold"/>
                    <Label Text="Gehe zum Zeichnen-Tab, um anzufangen!" 
                           TextColor="{StaticResource TextGray}"
                           HorizontalOptions="Center" 
                           FontSize="14" />
                </VerticalStackLayout>
            </CollectionView.EmptyView>
        </CollectionView>

        <Button Grid.Row="2" 
                Text="Weiterzeichnen" 
                Margin="0,10,0,0"
                Command="{Binding EditCommand}"
                IsEnabled="{Binding IsImageSelected}" 
                BackgroundColor="{StaticResource PrimaryAction}" 
                TextColor="White"/>
    </Grid>
</ContentPage>