<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiPaintTristanAckermann.Views.ExportPage"
             Title="Export">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Datei benennen" FontAttributes="Bold" />
        <Entry Text="{Binding FileName}" Placeholder="Z.B. Sommernacht" />
        <Label Text="Mindestens 3 Zeichen benötigt" TextColor="Red" FontSize="12" IsVisible="{Binding FileName.Length, Converter={StaticResource LessThanThreeConverter}}" />

        <Label Text="Format wählen" Margin="0,10,0,0" />
        <Picker ItemsSource="{Binding Formats}" SelectedItem="{Binding SelectedFormat}" />

        <HorizontalStackLayout Spacing="10">
            <Switch IsToggled="{Binding UseTransparency}" IsEnabled="{Binding IsPng}" />
            <Label Text="Transparenz aktivieren" VerticalOptions="Center" />
        </HorizontalStackLayout>

        <Label Text="Erinnerung setzen" Margin="0,10,0,0" />
        <DatePicker Date="{Binding Reminder}" />

        <Button Text="Exportieren" Command="{Binding ExportCommand}" Margin="0,30,0,0" />
    </VerticalStackLayout>
</ContentPage>