<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiPaintTristanAckermann.Views.AboutPage"
             Title="Über die App">
    <VerticalStackLayout Padding="30" Spacing="20">
        <Image Source="dotnet_bot.png" HeightRequest="150" HorizontalOptions="Center" />
        <Label Text="MauiPaint" FontSize="32" HorizontalOptions="Center" FontAttributes="Bold" />
        <Label Text="Version 1.0" HorizontalOptions="Center" />
        <Label Text="Entwickelt von Tristan Ackermann" 
               TextColor="{StaticResource Primary}" 
               HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>