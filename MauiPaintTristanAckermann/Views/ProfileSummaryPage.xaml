<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiPaintTristanAckermann.Views.ProfileSummaryPage"
             Title="Profil">
    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="Ihre Angaben" FontSize="20" FontAttributes="Bold" />
        
        <BoxView HeightRequest="1" Color="LightGray" HorizontalOptions="Fill" />

        <HorizontalStackLayout Spacing="10">
            <Label Text="E-Mail:" FontAttributes="Bold" />
            <Label Text="{Binding User.Email}" />
        </HorizontalStackLayout>

        <HorizontalStackLayout Spacing="10">
            <Label Text="Region:" FontAttributes="Bold" />
            <Label Text="{Binding User.Region}" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>