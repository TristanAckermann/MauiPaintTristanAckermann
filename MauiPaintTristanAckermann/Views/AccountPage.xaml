<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiPaintTristanAckermann.Views.AccountPage"
             xmlns:vm="clr-namespace:MauiPaintTristanAckermann.ViewModels"
             Title="{Binding Title}"
             BackgroundColor="{StaticResource AppBackground}">

    <ScrollView>
        <VerticalStackLayout Padding="25" Spacing="20" VerticalOptions="Center">
            
            <Label Text="Benutzerprofil" FontSize="28" FontAttributes="Bold" HorizontalOptions="Center" TextColor="{StaticResource White}" />
            
            <Border StrokeShape="RoundRectangle 10" Padding="20" BackgroundColor="{StaticResource PanelBackground}" StrokeThickness="0">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Dein Name" FontSize="16" TextColor="{StaticResource TextGray}" />
                    <Entry Text="{Binding UserName}" Placeholder="Name eingeben" TextColor="{StaticResource White}" PlaceholderColor="{StaticResource TextGray}" BackgroundColor="Transparent" Keyboard="Plain" />
                    <Label Text="{Binding UserNameError}" TextColor="{StaticResource ValidationRed}" FontSize="12" IsVisible="{Binding UserNameError, Converter={StaticResource StringToBoolConverter}}" />
                </VerticalStackLayout>
            </Border>

            <Label Text="Deine Galeriebilder sind an diesen Namen gebunden für diese Sitzung." 
                   TextColor="{StaticResource TextGray}" FontSize="12" HorizontalOptions="Center" HorizontalTextAlignment="Center" />

            <Button Text="Anmelden / Wechseln" 
                    Command="{Binding LoginCommand}"
                    BackgroundColor="{StaticResource PrimaryAction}" 
                    TextColor="White"
                    Margin="0,10,0,0" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>