<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    
    <!-- Design System Colors -->
    <Color x:Key="AppBackground">#242E38</Color>
    <Color x:Key="PanelBackground">#727580</Color>
    <Color x:Key="PrimaryAction">#6B6995</Color>
    <Color x:Key="Accent">#ACB9EA</Color>
    <Color x:Key="TextGray">#848A94</Color>
    <Color x:Key="ValidationRed">#D32F2F</Color>

    <!-- Mapping to Standard Keys for compatibility -->
    <Color x:Key="Primary">#6B6995</Color>
    <Color x:Key="Secondary">#ACB9EA</Color>
    <Color x:Key="Tertiary">#242E38</Color>

    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>
    <Color x:Key="OffBlack">#1F1F1F</Color>

    <Color x:Key="Gray100">#E1E1E1</Color>
    <Color x:Key="Gray200">#C2C2C2</Color>
    <Color x:Key="Gray300">#A3A3A3</Color>
    <Color x:Key="Gray400">#848484</Color>
    <Color x:Key="Gray500">#666666</Color>
    <Color x:Key="Gray600">#515151</Color>
    <Color x:Key="Gray900">#212121</Color>
    <Color x:Key="Gray950">#121212</Color>
    
</ResourceDictionary>