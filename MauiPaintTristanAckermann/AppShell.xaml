<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiPaintTristanAckermann.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MauiPaintTristanAckermann.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Zeichnen" Icon="brush_icon.png">
            <ShellContent Route="DrawPage" ContentTemplate="{DataTemplate views:DrawPage}" />
        </Tab>
        <Tab Title="Galerie" Icon="palette_icon.png">
            <ShellContent Route="GalleryPage" ContentTemplate="{DataTemplate views:GalleryPage}" />
        </Tab>
        <Tab Title="Pinsel" Icon="brush.png">
            <ShellContent ContentTemplate="{DataTemplate views:PresetsPage}" />
        </Tab>
        <Tab Title="Konto" Icon="palette_icon.png">
            <ShellContent ContentTemplate="{DataTemplate views:AccountPage}" />
        </Tab>
    </TabBar>
</Shell>